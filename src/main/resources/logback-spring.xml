<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 콘솔 출력 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- 파일 출력 설정 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/chatserver.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/chatserver.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- STOMP 디버그 로그를 위한 별도 파일 설정 -->
    <appender name="STOMP_DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/stomp-debug.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/stomp-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>
    
    <!-- 특정 패키지 로그 레벨 설정 -->
    <logger name="com.wowelang.chatserver" level="DEBUG" />
    
    <!-- STOMP 프레임 디버깅을 위한 로거 설정 -->
    <logger name="com.wowelang.chatserver.interceptor.StompFrameDebugInterceptor" level="TRACE">
        <appender-ref ref="STOMP_DEBUG_FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Spring WebSocket 관련 로그 설정 -->
    <logger name="org.springframework.web.socket" level="TRACE" />
    <logger name="org.springframework.messaging" level="TRACE" />
    <logger name="org.springframework.messaging.simp.stomp" level="TRACE" />
    <logger name="org.springframework.messaging.simp.stomp.StompDecoder" level="TRACE" />
    <logger name="org.apache.tomcat.websocket" level="TRACE" />
    
    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration> 